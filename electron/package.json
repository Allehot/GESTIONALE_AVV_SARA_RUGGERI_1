{
  "name": "gestionale-studio-legale",
  "version": "1.0.0",
  "description": "Gestionale Studio Legale Avv. Sara Ruggeri",
  "main": "main.js",
  "author": "Tu",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^25.0.0"
  },
  "build": {
    "appId": "com.studiolegale.gestionale",
    "productName": "Gestionale Studio Legale",
    "mac": {
      "category": "public.app-category.business",
      "target": ["dmg"]
    },
    "files": [
      "**/*",
      "../backend/**/*",
      "../frontend/dist/**/*"
    ],
    "extraResources": [
      { "from": "../backend", "to": "backend" },
      { "from": "../frontend/dist", "to": "dist" }
    ]
  }
}
